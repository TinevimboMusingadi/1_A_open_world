{
  "name": "dynamic-game-engine",
  "version": "1.0.0",
  "description": "A research game engine that uses LLMs to modify gameplay in real-time based on natural language descriptions",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "dev:client": "webpack serve --mode development --port 8080",
    "build": "webpack --mode production",
    "build:client": "webpack --mode production",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "game-engine",
    "llm",
    "dynamic",
    "research",
    "real-time"
  ],
  "author": "Research Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.1.0",
    "matter-js": "^0.19.0",
    "rate-limiter-flexible": "^4.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1",
    "vm2": "^3.9.19"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@types/jest": "^29.5.8",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "css-loader": "^6.11.0",
    "eslint": "^8.55.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "postcss-loader": "^8.1.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^4.1.11",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/client/dist/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
